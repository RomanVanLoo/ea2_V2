<h2>New Article</h2>
<%= form_for @new_article, url: articles_path(@new_article), html: { class: "new-article-form" } do |f| %>
  <%= f.label "Title", class: "form-label" %>
  <%= f.text_field :title, class: "form-control", required: true %>
  <%= f.label "Category", class: "form-label", for: "category-new-article" %>
  <%= f.select :category, Article::CATEGORIES, { include_blank: '-- Select One --' }, { class: "form-control", id: "category-new-article", required: true } %>
  <%= f.label "Description", class: "form-label" %>
  <%= f.text_area :description, class: "form-control", required: true %>
  <%= f.label "Dimensions", class: "form-label" %>
  <%= f.text_field :dimensions, class: "form-control" %>
  <%= f.label "Price", class: "form-label" %>
  <%= f.number_field :price, step: 0.01, class: "form-control" %>
  <%= f.label "Upload Photo", class: "form-label" %><br>
  <%= f.file_field :photos, multiple: true, required: true %><br>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go Back", admin_path, class: "btn btn-secondary" %>
