<h2>Edit Article</h2>
<%= form_for @article, url: articles_path(id: @article.id), html: { class: "new-article-form" } do |f| %>
  <%= f.label "Title", class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label "Category", class: "form-label", for: "category-new-article" %>
  <%= f.select :category, Article::CATEGORIES, {}, { class: "form-control", id: "category-new-article" } %>
  <%= f.label "Description", class: "form-label" %>
  <%= f.text_area :description, class: "form-control" %>
  <%= f.label "Dimensions", class: "form-label" %>
  <%= f.text_field :dimensions, class: "form-control" %>
  <%= f.label "Price", class: "form-label" %>
  <%= f.number_field :price, step: 0.01,class: "form-control" %>
  <%= f.submit "Edit", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go Back", admin_path, class: "btn btn-secondary" %>
